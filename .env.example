# Database Configuration - Supabase PostgreSQL
# Opción 1: Usar DATABASE_URL (recomendado para Supabase)
DATABASE_URL=postgresql://postgres:password@host:port/database

# Opción 2: Usar variables individuales (si no usas DATABASE_URL, descomenta estas líneas)
# DB_HOST=db.ybxqfcyultvzghccegjv.supabase.co
# DB_PORT=6543
# DB_USERNAME=postgres
# DB_PASSWORD=your-password
# DB_DATABASE=postgres

# Application Configuration
NODE_ENV=development
PORT=4001

# Database Options
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URLS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# Autodesk ACC Configuration
AUTODESK_CLIENT_ID=your-autodesk-client-id
AUTODESK_CLIENT_SECRET=your-autodesk-client-secret
AUTODESK_CALLBACK_URL=http://localhost:4001/api/acc/oauth/callback
